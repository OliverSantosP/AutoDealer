@model AutoDealer.Models.Gastos

@{
    ViewBag.Title = "AutoDealer - Editar Gasto";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="col-md-12">
        <div class="widget worange">
            <div class="widget-head">
                <div class="pull-left">Editar Gasto</div>
                <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
                    <a href="#" class="wclose"><i class="icon-remove"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>

            <div class="widget-content">
                <div class="padd">
                    @Html.HiddenFor(model => model.Id)

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Tipo)
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("Tipo", String.Empty)
                        @Html.ValidationMessageFor(model => model.Tipo)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Precio)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Precio)
                        @Html.ValidationMessageFor(model => model.Precio)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.FechaCreacion)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.FechaCreacion)
                        @Html.ValidationMessageFor(model => model.FechaCreacion)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Automovil)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Automovil)
                        @Html.ValidationMessageFor(model => model.Automovil)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.PagadoA)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.PagadoA)
                        @Html.ValidationMessageFor(model => model.PagadoA)
                    </div>
                    <br />
                    <p>
                        <input type="submit" value="Save" />
                    </p>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a lista completa", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
