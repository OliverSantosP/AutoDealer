@model IEnumerable<AutoDealer.Models.Facturas>

@{
    ViewBag.Title = "AutoDealer - Facturas";
}
<div id="TestId">A</div>
<div class="col-md-12">
    <div class="widget wred">
        <div class="widget-head">
            <div class="pull-left">Facturas</div>
            <div class="widget-icons pull-right">
                <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
                <a href="#" class="wclose"><i class="icon-remove"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="widget-content">
            <div class="table-responsive">
                <table id="FacturasTable" class="table table-bordered ">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaCreacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaModificacion)
                            </th>
                            <th>
                                Vendedor
                            </th>
                            <th>
                                Comprador
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NCF)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CostoTraspaso)
                            </th>
                            <th>
                                Empresa
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaModificacion)
                                </td>
                                <td>
                                    <a href="/Persona/Details/@item.Personas1.Id">@item.Personas1.Nombre @item.Personas1.Apellido</a>
                                </td>
                                <td>
                                    <a href="/Persona/Details/@item.Personas.Id">@item.Personas.Nombre @item.Personas.Apellido</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NCF)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CostoTraspaso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Empresas.Nombre)
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/Factura/Edit/@item.Id" class="btn btn-sm btn-default">Editar</a>
                                        <a href="/Factura/Imprimir?FacturaId=@item.Id" class="btn btn-sm btn-default">Imprimir</a>
                                        <a href="#" class="btn btn-sm btn-default" data-toggle="modal" id="BorrarButton" name="BorrarButton"><i class="icon-remove"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Borrar Factura</h4>
                </div>
                <div class="modal-body">
                    <p>Esta seguro que desea borrar la factura #?</p>
                    <br />
                    <div class="padd">
                        <button type="button" class="btn btn-default" id="Cancelar" name="Cancelar" data-dismiss="modal" aria-hidden="true">Cancelar</button>
                        <a href="testlink" type="button" class="btn btn-danger" id="BorrarButton2" name="BorrarButton2" data-dismiss="modal">Borrar</a>
                    </div>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    <hr />

</div>

@section Scripts {
    <script type="text/javascript">
        
        $('#FacturasTable').find('BorrarButton').click(function () {
            $("#myModal.modal-body").find('#BorrarButton2').append("test");
                row = $(this).find('td:first').text();
                $('#myModal').show().append(row.text());
                
            });

            $("#myModal").find('#BorrarButton2').click(function () {
                alert('test');
                window.location.replace("http://stackoverflow.com" + row);
            });

    </script>
}