@model IEnumerable<AutoDealer.Models.Liquidaciones>

@{
    ViewBag.Title = "AutoDealer - Liquidaciones";
}
</div>
<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm())
        {
            @Html.Label("Desde:")
            <input type="text" class="dateinput" name="Desde" id="Desde">
            @Html.Label("Hasta:")
            <input type="text" class="dateinput" name="Hasta">
            <input type="submit" value="Filtrar" id="Filtrar" name="Filtrar" class="btn btn-default">
        }
    </div>
</div>
<div class="widget wblue">
    <div class="widget-head">
        <div class="pull-left">Liquidaciones</div>
        <div class="widget-icons pull-right">
            <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
            <a href="#" class="wclose"><i class="icon-remove"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="widget-content">
        <div class="table-responsive">
            <table class="table table-bordered ">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                                                <th>
                            @Html.DisplayNameFor(model => model.MontoVenta)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Suplidor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PagadoCon)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FechaCreacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FechaModificacion)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MontoVenta)
                        </td>
                        <td>
                            @if (!String.IsNullOrEmpty(@item.Suplidor.ToString()))
                            {
                                int SuplidorNombre = Int32.Parse(@item.Suplidor.ToString());
                                  @Html.Label(AutoDealer.Models.Personas.GetPersonaNombre(SuplidorNombre));
                            
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PagadoCon)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaCreacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaModificacion)
                        </td>
                        <td>
                            <a href="/Liquidacion/Details/@item.Id" class="btn btn-sm btn-default"><i class="icon-zoom-in"></i></a>
                            <a href="/Factura/Print/@item.Id" class="btn btn-sm btn-default"><i class="icon-print"></i></a>
                            <a href="/Liquidacion/Edit/@item.Id" class="btn btn-sm btn-default"><i class="icon-pencil"></i></a>
                            <a href="/Liquidacion/Delete/@item.Id" class="btn btn-sm btn-default"><i class="icon-remove"></i></a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>