@model AutoDealer.Models.Liquidaciones

@{
    ViewBag.Title = "AutoDealer - Crear Liquidacion";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="widget wblue">
        <div class="widget-head">
            <div class="pull-left">Liquidaciones</div>
            <div class="widget-icons pull-right">
                <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
                <a href="#" class="wclose"><i class="icon-remove"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="widget-content">
            <div class="padd">
                <div class="row">
                    <div class="col-lg-2">
                        <div class="editor-label">
                            @Html.Label("Suplidor:")
                        </div>
                        <div class="editor-field">
                            <select>
                                @foreach (var item in @AutoDealer.Models.Personas.GetSuplidores())
                                {
                                    <option value="@item.Id">@item.Nombre @item.Apellido</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-2">

                        <div class="editor-label">
                            @Html.Label("Precio de Venta:")
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.MontoVenta)
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.PagadoCon)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.PagadoCon)
                            @Html.ValidationMessageFor(model => model.PagadoCon)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <br />
                    <hr />
                    @if (!String.IsNullOrEmpty(Request.QueryString["AutomovilId"]))
                    {
                        string AutomovilId = Request.QueryString["AutomovilId"];

                        <table>
                            <thead>
                                <tr>
                                    <th>
                                        <div class="padd"><b>Id</b></div>
                                    </th>
                                    <th>
                                        <div class="padd">
                                            <b>Descripcion</b>
                                        </div>
                                    </th>
                                    <th>
                                        <div class="padd">
                                            <b>Precio</b>
                                        </div>
                                    </th>
                                    <th>
                                        <div class="padd">
                                            <b>Pagado a</b>
                                        </div>
                                    </th>
                                    <th>
                                        <div class="padd">
                                            <b>Fecha Creacion</b>
                                        </div>
                                    </th>
                                    <th>
                                        <div class="padd"><b>Fecha Modificacion</b></div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in AutoDealer.Models.Gastos.GetGastosOf(AutomovilId))
                                {
                                    <tr>
                                        <td><div class="padd">@item.Id</div></td>
                                        <td><div class="padd">@item.TiposDeGastos.Nombre</div></td>
                                        <td><div class="padd">@item.Precio</div></td>
                                        <td><div class="padd">@item.PagadoA</div></td>
                                        <td><div class="padd">@item.FechaCreacion</div></td>
                                        <td><div class="padd">@item.FechaModificacion</div></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    <br />
                    <hr />
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="editor-label">
                                Detalles de Venta:
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Detalle)
                                @Html.ValidationMessageFor(model => model.Detalle)
                            </div>
                        </div>
                        <div class="col-lg-4"></div>
                        <div class="col-lg-4">
                            <div class="right">
                                <br />
                                <b>Total:</b>
                                <br />
                                <div class="editor-field">
                                    RD $100.00
                                </div>
                                <br />
                                <b>Comision:</b>
                                <br />
                                RD $100.00
                                <br />
                                <br />
                                <b>Total a pagar:</b>
                                <br />
                                RD $100.00
                            </div>
                        </div>
                    </div>
                    <p>
                        <input type="submit" value="Create" />
                    </p>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a lista completa", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
