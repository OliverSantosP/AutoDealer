<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <!-- Stylesheets -->
    <link href="~/Content/css/bootstrap.css" rel="stylesheet">
    <!-- Font awesome icon -->
    <link rel="stylesheet" href="~/Content/fonts/font-awesome.css">
    <!-- jQuery UI -->
    <link rel="stylesheet" href="~/Content/css/jquery-ui.css">
    <!-- Calendar -->
    <link rel="stylesheet" href="~/Content/css/fullcalendar.css">
    <!-- prettyPhoto -->
    <link rel="stylesheet" href="~/Content/css/prettyPhoto.css">
    <!-- Star rating -->
    <link rel="stylesheet" href="~/Content/css/rateit.css">
    <!-- Date picker -->
    <link rel="stylesheet" href="~/Content/css/bootstrap-datetimepicker.min.css">
    <!-- jQuery Gritter -->
    <link rel="stylesheet" href="~/Content/css/jquery.gritter.css">
    <!-- CLEditor -->
    <link rel="stylesheet" href="~/Content/css/jquery.cleditor.css">
    <!-- Bootstrap toggle -->
    <link rel="stylesheet" href="~/Content/css/bootstrap-switch.css">
    <!-- Main stylesheet -->
    <link href="~/Content/css/style.css" rel="stylesheet">
    <!-- Widgets stylesheet -->
    <link href="~/Content/css/widgets.css" rel="stylesheet">

    @Styles.Render("~/Content/css/bootstrap.css")
    @Styles.Render("~/Content/css/datepicker.css")
    @Styles.Render("~/Content/css/navbar.css")

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Auto Dealer</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="/comprador">Comprador</a></li>
                <li><a href="/vendedor">Vendedor</a></li>
                <li><a href="/TiposGasto">Tipos de Gastos</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        <li class="dropdown-header">Nav header</li>
                        <li><a href="#">Separated link</a></li>
                        <li><a href="#">One more separated link</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <!--/.nav-collapse -->
    </div>
    <br />
    <br />
    <section class="content-wrapper main-content clear-fix">
        @RenderBody()
    </section>
    <footer>
        <br />
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - AutoDealer</p>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/js/bootstrap.js")
    @Scripts.Render("~/Content/js/bootstrap-datepicker.js")
    <script type="text/javascript">
        $(function () {
            $("input:text.dateinput").datepicker();
        });
    </script>
    @RenderSection("scripts", required: false)


</body>
</html>
