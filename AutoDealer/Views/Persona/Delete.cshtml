@model AutoDealer.Models.Personas

@{
    ViewBag.Title = "AutoDealer - Borrar Persona";
}
<h3>Esta seguro que desea borrar esta Persona?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="col-md-12">
    <div class="widget wviolet">
        <div class="widget-head">
            <div class="pull-left">Borrar Comprador</div>
            <div class="widget-icons pull-right">
                <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
                <a href="#" class="wclose"><i class="icon-remove"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="widget-content">
            <div class="padd">
                <div class="display-label">
                    <b>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </b>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Nombre)
                </div>
                <br />
                <div class="display-label">
                    <b>
                        @Html.DisplayNameFor(model => model.Apellido)
                    </b>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Apellido)
                </div>
                <br />
                <div class="display-label">
                    <b>
                        @Html.DisplayNameFor(model => model.Telefono)
                    </b>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Telefono)
                </div>
                <br />
                <div class="display-label">
                    <b>
                        @Html.DisplayNameFor(model => model.Direccion)
                    </b>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Direccion)
                </div>
                <br />
                <div class="display-label">
                    <b>
                        @Html.DisplayNameFor(model => model.Celular)
                    </b>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Celular)
                </div>
                <br />
                <div class="display-label">
                    <b>
                        @Html.DisplayNameFor(model => model.Email)
                    </b>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Email)
                </div>
                <br />
                <div class="display-label">
                    <b>
                        @Html.DisplayNameFor(model => model.FechaCreacion)
                    </b>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.FechaCreacion)
                </div>
                <br />
                <div class="display-label">
                    <b>
                        @Html.DisplayNameFor(model => model.FechaModificacion)
                    </b>
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.FechaModificacion)
                </div>
                <br>
                <div class="display-label">
                    <b>Rol:</b>
                </div>
                @{
    var Rol = AutoDealer.Models.PersonasRoles.ConseguirRolDePersona(Model.Id);
                }
                @if (Rol != null)
                {
                    string NombreRol = AutoDealer.Models.TiposRoles.ConseguirNombreRol(Rol.Rol).ToString();
                    @NombreRol
                    <br />
                }
                <br />
                <div class="display-label">

                    <b>Comision:</b>
                </div>
                @if (Rol != null)
                {
                    string Comision = AutoDealer.Models.PersonasRoles.GetComision(Rol.Id);
                    @Comision
                    <br />
                    <br />
                }

                <input type="submit" value="Borrar" class="btn btn-danger" />

            </div>
        </div>
    </div>
</div>
    @Html.ActionLink("Volver a lista completa", "Index")
}