@model AutoDealer.Models.Showrooms

@{
    ViewBag.Title = "AutoDealer - Borrar Showroom";
}

<h3>Esta seguro que desea borrar este Showroom?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-12">
        <div class="widget wgreen">
            <div class="widget-head">
                <div class="pull-left">Borrar Comprador</div>
                <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="icon-chevron-up"></i></a>
                    <a href="#" class="wclose"><i class="icon-remove"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="widget-content">
                <div class="padd">
                    <div class="display-label">
                        <b>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </b>
                    </div>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.Nombre)
                    </div>
                    <br />
                    <div class="display-label">
                        <b>
                            @Html.DisplayNameFor(model => model.Empresa)
                        </b>
                    </div>
                    <div class="display-field">
                       @AutoDealer.Models.Empresas.GetEmpresa(Model.Empresa).First().Nombre
                    </div>
                    <br />
                    <div class="display-label">
                        <b>
                            @Html.DisplayNameFor(model => model.FechaCreacion)
                        </b>
                    </div>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.FechaCreacion)
                    </div>
                    <br />
                    <div class="display-label">
                        <b>
                            @Html.DisplayNameFor(model => model.FechaModificacion)
                        </b>
                    </div>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.FechaModificacion)
                    </div>
                    <br>
                    <input type="submit" value="Borrar" class="btn btn-danger" />

                </div>
            </div>
        </div>
    </div>
    @Html.ActionLink("Volver a lista completa", "Index")
}
